<project name="file" default="modify" basedir=".">
	
	<!-- - - - - - - - - - - - - - - - - - 
          target: delete                      
         - - - - - - - - - - - - - - - - - -->
    <target name="delete">
        <delete file="${file.path}"/>
    </target>

	<!-- - - - - - - - - - - - - - - - - - 
          target: create                      
         - - - - - - - - - - - - - - - - - -->
    <target name="create">
    	<touch file="${file.path}"/>
    </target>

	<!-- - - - - - - - - - - - - - - - - - 
          target: modify                      
         - - - - - - - - - - - - - - - - - -->
    <target name="modify">
    	<echo append="true" file="${file.path}">Hello!</echo>
    </target>
</project>
