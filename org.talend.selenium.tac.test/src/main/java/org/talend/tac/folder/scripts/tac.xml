<project name="testng" default="name" basedir=".">

    	<!-- - - - - - - - - - - - - - - - - - 
          target: name                      
         - - - - - - - - - - - - - - - - - -->
    <target name="name">
    	<jar destfile="tac.jar">
    		<fileset dir="${basedir}../../../../../../">
    			<include name="**/AntCommmandline.class"/>
    			<include name="**/Karaf.class"/>
    		</fileset>
    	</jar>
    </target>
	
    <target name="jar-tac">
    	<jar destfile="tac.jar">
    		<fileset dir="${tac.root}">
    			<include name="**/AntCommmandline.class"/>
    			<include name="**/Karaf.class"/>
    		</fileset>
    	</jar>
    </target>

</project>
