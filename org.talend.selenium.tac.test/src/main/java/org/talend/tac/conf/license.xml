<?xml version="1.0" encoding="UTF-8"?>
<suite name="Suite" parallel="false">

	<parameter name="dbUserName" value="tisadmin" />
	<parameter name="dbUserPassWd" value="tisadmin" />
	<parameter name="dbDriver" value="org.h2.Driver" />
    
	<test name="TestDbConfig">
		<classes>
			<class name="com.talend.tac.cases.dbConfig.TestDbConfig" />
			<class name="com.talend.tac.cases.dbConfig.TestDbConfigImportParameters" />
			<class name="com.talend.tac.cases.dbConfig.TestTokenINDbConfigPage"/>
		</classes>
	</test>
	<test name="TestDbConfigReload" preserve-order="true">
	    <parameter name="dbUrl" value="wrongURL" />
		<parameter name="dbUserName" value="wrong userName" />
		<parameter name="dbDriver" value="wrong driver" />
		<classes>		
			<class name="com.talend.tac.cases.dbConfig.TestDbConfigReload" />
		</classes>
	</test>
	
	<test name="TestWrongDbConfig_diver">
	    <parameter name="dbDriver" value="wrong driver" />
		<classes>
			<class name="com.talend.tac.cases.dbConfig.TestWrongDbConfig">
				<methods>
					<include name="testWrongDriverDbConfig" />
				</methods>
			</class>
		</classes>
	</test>
	<test name="TestWrongDbConfig_nameAndPassword">
	    <parameter name="dbUserName" value="wrong userName" />
		<parameter name="dbUserPassWd" value="wrong Userpasswd" />
		
		<classes>
			<class name="com.talend.tac.cases.dbConfig.TestWrongDbConfig">				
				<methods>
					<include name="testWrongAccountDbConfig" />
				</methods>
			</class>
		</classes>
	</test>

</suite>

