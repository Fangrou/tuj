<?xml version="1.0" encoding="UTF-8"?>
<suite name="Suite" parallel="false">
  
 
  <test name="connection_add">
    <classes>
    <class name="com.talend.cases.dashboard.connection.TestAddConnection"/>
    <methods>
	            <include name="testAddConnectionMSSQL"/>
	            <include name="testAddConnectionMysql"/>
	            <include name="testAddConnectionOracle"/>
	         </methods>
    </classes>
  </test> 
  
   <test name="connection_duplicate">
    <classes>	
    <class name="com.talend.cases.dashboard.connection.TestDuplicateConnection"/>
    </classes>
  </test>
  
  <test name="connection_delete">
    <classes>
    <class name="com.talend.cases.dashboard.connection.TestAddConnection"/>
    <methods>
	<include name="testDeleteConnection"/>
	</methods>
    </classes>
  </test>
  
  <test name="connection_check">
    <classes>
    <class name="com.talend.cases.dashboard.connection.TestConnectionCheck"/>
    </classes>
  </test>

  <test name="connection_jobanalyses">
    <classes>	
    <class name="com.talend.cases.dashboard.jobsAnalyses.TestJobAnalyses"/>
    <methods>
	<include name="testJobAnalysesWithMYSQL"/>
	<include name="testJobAnalysesWithMSSQL"/>
	<include name="testJobAnalysesWithORACLE"/>
	
	</methods>
    </classes>
  </test>
  
    <test name="connection_delete_usedbyjobanalyses">
    <classes>	
    <class name="com.talend.cases.dashboard.jobsAnalyses.TestJobAnalyses"/>
    <methods>
	<include name="testDeleteConnectionUsedByJobAnalyses"/>
	</methods>
    </classes>
  </test>
</suite>

