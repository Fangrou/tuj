<?xml version="1.0"?>
<mapping>
	<dbms product="IBM_DB2" id="ibmdb2_id" label="Mapping IBMDB2"
		default="true">
		<dbTypes>
				<dbType type="BIGINT" ignoreLen="true" ignorePre="true"/>
				<dbType type="BLOB" defaultLength="10" ignorePre="true"/>
				<dbType type="CHARACTER" defaultLength="50" ignorePre="true"/>
				<dbType type="CHAR" defaultLength="50" ignorePre="true"/>
				<dbType type="CLOB" ignorePre="true"/>
				<dbType type="DATE" ignoreLen="true" ignorePre="true"/>
				<dbType type="DECIMAL" defaultLength="20" defaultPrecision="10"/>
				<dbType type="GRAPHIC" defaultLength="20" ignoreLen="true" ignorePre="true"/>
				<dbType type="INTEGER" ignoreLen="true" ignorePre="true"/>
				<dbType type="LONG VARCHAR" ignoreLen="true" ignorePre="true"/>
				<dbType type="NUMERIC" defaultLength="20" defaultPrecision="10"/>
				<dbType type="SMALLINT" ignoreLen="true" ignorePre="true"/>
				<dbType type="TIME" ignoreLen="true" ignorePre="true"/>
				<dbType type="TIMESTAMP" ignoreLen="true" ignorePre="true"/>
				<dbType type="VARCHAR" default="true" defaultLength="200" ignorePre="true"/>
				<dbType type="VARGRAPHIC" defaultLength="20" ignorePre="true"/>
				<dbType type="XML" ignoreLen="true" ignorePre="true"/>
		</dbTypes>

		<language name="perl">
			<talendToDbTypes>
				<talendType type="int">	
					<dbType type="INTEGER" default="true" />	
					<dbType type="BIGINT"/>	
					<dbType type="SMALLINT"/>	
				</talendType>
				<talendType type="decimal">
					<dbType type="DECIMAL" default="true" />
					<dbType type="NUMERIC"/>	
				</talendType>
				<talendType type="boolean">	
					<dbType type="CHAR" default="true"/>
					<dbType type="INTEGER"/>
				</talendType>
				<talendType type="string">
					<dbType type="VARCHAR" default="true" />
					<dbType type="LONG VARCHAR" />	
					<dbType type="BLOB"/>	
					<dbType type="CLOB"/>
					<dbType type="GRAPHIC"/>
					<dbType type="VARGRAPHIC"/>
					<dbType type="XML"/>
				</talendType>
				<talendType type="date">
					<dbType type="DATE" default="true" />	
				</talendType>
				<talendType type="datetime">
					<dbType type="DATE" default="true" />
					<dbType type="TIME" />	
					<dbType type="TIMESTAMP"/>		
				</talendType>
			</talendToDbTypes>
			<dbToTalendTypes><!-- Adviced mappings  -->
				<dbType type="BIGINT">
					<talendType type="int" default="true" />
				</dbType>
				<dbType type="BLOB">
					<talendType type="string" default="true" />
				</dbType>
				<dbType type="CHARACTER">
					<talendType type="string" default="true" />
				</dbType>
				<dbType type="CHAR">
					<talendType type="string" default="true" />
					<talendType type="boolean"  />
				</dbType>
				<dbType type="CLOB">
					<talendType type="string" default="true" />
				</dbType>
				<dbType type="DATE">
					<talendType type="date" default="true" />
				</dbType>
				<dbType type="DECIMAL">
					<talendType type="decimal" default="true" />
				</dbType>
				<dbType type="GRAPHIC">
					<talendType type="string" default="true" />
				</dbType>
				<dbType type="INTEGER">
					<talendType type="int" default="true" />
					<talendType type="boolean"  />
				</dbType>
				<dbType type="LONG VARCHAR">
					<talendType type="string" default="true" />
				</dbType>
				<dbType type="NUMERIC">
					<talendType type="decimal" default="true"/>
				</dbType>
				<dbType type="SMALLINT">
					<talendType type="int" default="true" />
				</dbType>
				<dbType type="TIME">
					<talendType type="datetime" default="true" />
				</dbType>
				<dbType type="TIMESTAMP">
					<talendType type="datetime" default="true" />
				</dbType>
				<dbType type="VARCHAR">
					<talendType type="string" default="true" />
				</dbType>
				<dbType type="VARGRAPHIC">
					<talendType type="string" default="true" />
				</dbType>
				<dbType type="XML">
					<talendType type="string" default="true" />
				</dbType>
			</dbToTalendTypes>
		</language>
	</dbms>

</mapping>
